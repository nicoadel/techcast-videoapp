{% extends 'base.html.twig' %}
{% block body %}
<div class="container-fluid">
   <div class="row justify-content-center ">
         <div class="title col-12 mt-5 mb-3">
            <h1 class="text-center">{{ videodata.name }}</h1>
         </div>
         <div class="videoplayer col-12 col-md-4">
         <video id="player" playsinline controls data-poster="/path/to/poster.jpg">
            <source src="{{ asset('/videofiles/')}}{{videodata.file}}" type="video/mp4" />
         </video>
         </div>
   </div>
</div>
</div>
{% endblock %}
{# 
   here you can use the Twig variable 'videodata' that gets passed from the controller. 
   it has the fields 'name' and 'file' 
#}