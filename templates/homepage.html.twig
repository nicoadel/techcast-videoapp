{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <table class="table table-striped">
    <h1>These are our latest videos</h1>
        <thead>
            <tr>
                <th>ID.</th>
                <th>Title</th>
                <th>Link</th>
            </tr>
        </thead>
        <tbody>
            {% for video in videos %}
                <tr>
                    <td scope="row">{{ loop.index }}</td>
                    <td>{{ video.name }}</td>
                    <td><a href="{{ path('videos', {video: loop.index}) }}">Link</a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
